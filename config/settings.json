{
  "hooks": {
    "UserPromptSubmit": [
      {
        "type": "command",
        "command": "bash \"$HOME/.claude/hooks/load-context.sh\""
      }
    ],
    "PostToolUse": [
      {
        "matcher": "WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$HOME/.claude/hooks/webfetch-fallback.sh\""
          }
        ]
      }
    ]
  }
}
